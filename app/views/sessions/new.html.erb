<section class="section">
  <div class="container">
    <h1 class="title">
      Sign In
    </h1>
    <p class="SignInForm">
      <%= simple_form_for :session, url: sessions_path do |f| %>
        <%= f.input :username, required: true %>
        <%= f.button :submit, "Sign In" %>
      <% end %>
      <br>
    </p>
      <%= link_to "Back", root_path %>
  </div>
</section>