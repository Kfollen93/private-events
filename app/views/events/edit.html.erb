<section class="section">
  <div class="container">
    <h1 class="editevent">
      Edit Event
    </h1>
    <p class="EditEvent">
      <div class="container">
        <%= simple_form_for @event do |f| %>
          <% if @event.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@event.errors.count, "error") %> prohibited
                this article from being saved:
              </h2>
              <ul>
                <% @event.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div id="boxshadow">
            <%= f.input :title %>
            <%= f.input :body %>
            <%= f.input :date %>
          </div>
          <div style="padding:10px">
            <%= f.button :submit %>
          </div>
        <% end %>
        <%= yield %>
      </p>
    </div>
</section>
