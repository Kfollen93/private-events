<div class="container">
  <h1 class="title">
    Upcoming Events
  </h1>
  <p class="userpage">
  <div class="centertext">
  <div id="boxshadow">
  <div class="tile is-child box">
    <p class="userpage">
      <% @events.upcoming.each do |event| %>
      <hr> 
        <%= link_to event.title, event_path(event) %><br>
      <% end %>
  </div>
  </div>
  </div>
  </p>
</div>
<div class="container">
  <h1 class="title">
    Past Events
  </h1>
  <p class="userpage">
  <div class="centertext">
  <div id="boxshadow">
  <div class="tile is-child box">
    <p class="userpage">
      <% @events.past.each do |event| %>
      <hr> 
        <%= link_to event.title, event_path(event) %><br>
      <% end %>
  </div>
  </div>
  </div>
  </p>
</div>
