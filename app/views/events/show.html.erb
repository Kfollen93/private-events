<section class="section">
  <div class="container">
    <h1 class="title">
      Creator of Event and Attendees:
    </h1>
    <p class="userpage">
    Event Created By:
    <%= @event.creator.username %><br>
      Desc: <%= @event.body %><br>
      When: <%= @event.date.strftime("%m-%d-%Y %H:%M") %><br>
    <br>
    Event Attendees:
    <% if @event.attendees.count > 0 %>
      <% @event.attendees.each do |attendee| %>
        <%= attendee.username %>
      <% end %>
    <% else %>
      This event does not have anyone attending.
    <% end %>
    <div class="tile is-child box">
    People attending this event:<br>
    *ruby code here*
</div>
    </p>
  </div>
</section>

<% unless @event.creator.username == current_user.username %>

<% end %>


 <%= button_to 'Attend', attend_event_path(@event), method: :post, confirm: 'really?' %>
 <%= @event.attendees.count %>
